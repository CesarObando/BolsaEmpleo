<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="categoria" namespace="/recursos/Categorias" extends="struts-default">
        
        <action name="insertarCategoria" class="Actions.InsertarCategoriaAction">
            <interceptor-ref name="defaultStack">
                <param name="validation.excludeMethods">execute</param>
            </interceptor-ref>
            <result name="input" type="dispatcher">/recursos/Categorias/insertarCategoria.jsp</result>
        </action>
        
        <action name="insertarCategoriaProcess" method="insertar" class="Actions.InsertarCategoriaAction">
            <result name="input" type="dispatcher">/recursos/Categorias/insertarCategoria.jsp</result>
            <result name="error" type="dispatcher">/recursos/Categorias/insertarCategoria.jsp</result>
            <result name="success" type="redirect">/recursos/pantallaPrincipal.jsp</result>
        </action>
        
        <action  class="Actions.BuscarCategoriasAction" name="buscarCategoria">
            <result name="input" type="dispatcher">/recursos/Categorias/buscarCategorias.jsp</result>
        </action>
        
        <action  class="Actions.BuscarCategoriasAction" name="buscarCategoriasProcess" method="buscar">
            <result name="buscarCategorias" type="dispatcher">/recursos/Categorias/mantenerCategorias.jsp</result>
        </action>
        
        <action class="Actions.EditarCategoriaAction" name="editarCategoria">
            <interceptor-ref name="defaultStack">
                <param name="validation.excludeMethods">execute</param>
            </interceptor-ref>
            <result type="dispatcher" name="input">/recursos/Categorias/editarCategoria.jsp</result>
        </action>
        
        <action class="Actions.EditarCategoriaAction" name="editarCategoriaProcess" method="editar">
            <result type="dispatcher" name="input">/recursos/Categorias/editarCategoria.jsp</result>
            <result type="dispatcher" name="error">/recursos/Categorias/editarCategoria.jsp</result>
            <result name="success" type="redirect">/recursos/pantallaPrincipal.jsp</result>
        </action>
        
        <action class="Actions.EliminarCategoriaAction" name="eliminarCategoria">
            <result type="dispatcher" name="input">/recursos/Categorias/eliminarCategoria.jsp</result>
        </action>
        
        <action class="Actions.EliminarCategoriaAction" name="eliminarCategoriaProcess" method="eliminar">
            <result type="dispatcher" name="input">/recursos/Categorias/eliminarCategoria.jsp</result>
            <result type="dispatcher" name="error">/recursos/Categorias/eliminarCategoria.jsp</result>
            <result name="success" type="redirect">/recursos/pantallaPrincipal.jsp</result>
        </action>
        
    </package>
</struts>