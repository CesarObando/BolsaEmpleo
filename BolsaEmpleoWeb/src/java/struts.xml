<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="iniciarSesionInit" class="Actions.IniciarSesionAction">
        <interceptor-ref name="defaultStack">
            <param name="validation.excludeMethods">execute</param>
        </interceptor-ref>
        <result name="input" type="dispatcher">/recursos/usuarios/login.jsp</result>
        <result name="error" type="dispatcher">/recursos/usuarios/login.jsp</result>
    </action>
    <action name="iniciarSesion" method="iniciarSesionUsuario" class="Actions.IniciarSesionAction">
        <result name="input" type="dispatcher">/recursos/usuarios/login.jsp</result>
        <result name="success" type="dispatcher">PantallaPrincipal.jsp</result>
        <result name="error" type="dispatcher">/recursos/usuarios/login.jsp</result>
    </action>
    </package>
</struts>
