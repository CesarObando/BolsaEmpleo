<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    
    <include file="administrador.xml"/>
    <include file="solicitante.xml"/>
    <include file="empresa.xml"/>
    <include file="oferta.xml"/>
    <include file="solicitud.xml"/>
    <include file="categoria.xml"/>
    
    <constant name="struts.devMode" value="false" />
    <constant name="struts.configuration.xml.reload" value="true" />
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        
        <result-types>
            <result-type name="fotoSolicitante" class="Actions.CustomImageResult" />
        </result-types>
        
        <action name="getImagen" class="Actions.ImagenUtilAction">
            <interceptor-ref name="defaultStack">
                <param name="maximumSize">2097152</param>
                <param name="allowedTypes">
                    image/png,image/gif,image/jpeg,image/pjpeg,image/jpg
                </param>
            </interceptor-ref>
            <result name="success" type="fotoSolicitante" />
            <result name="input" type="fotoSolicitante" />
        </action>
        
        <action name="menuPrincipal">
            <result name="input" type="dispatcher">/recursos/usuarios/menuPrincipal.jsp</result>
        </action>
        <action name="insertarOferta" class="Actions.InsertarOfertaAction">
            <interceptor-ref name="defaultStack">
                <param name="validation.excludeMethods">execute</param>
            </interceptor-ref>
            <result name="input" type="dispatcher">/recursos/Ofertas/insertarOferta.jsp</result>
        </action>
        
        <action  class="Actions.BuscarOfertasAction" name="buscarOfertas">
            <result name="input" type="dispatcher">/recursos/Ofertas/buscarOfertas.jsp</result>
            <result name="success" type="dispatcher">/recursos/Ofertas/buscarOfertas.jsp</result>
        </action>
        
        <action  class="Actions.BuscarOfertasAction" name="buscarOfertasProcess" method="buscar">
            <result name="buscarOfertas" type="dispatcher">/recursos/Ofertas/mantenerOfertas.jsp</result>
        </action>
        
        <action class="Actions.EditarOfertaAction" name="editarOferta">
            <interceptor-ref name="defaultStack">
                <param name="validation.excludeMethods">execute</param>
            </interceptor-ref>
            <result type="dispatcher" name="input">/recursos/Ofertas/editarOferta.jsp</result>
        </action>
        
        <action class="Actions.EditarOfertaAction" name="editarOfertaProcess" method="editar">
            <result type="dispatcher" name="input">/recursos/Ofertas/editarOferta.jsp</result>
            <result type="dispatcher" name="error">/recursos/Ofertas/editarOferta.jsp</result>
            <result name="success" type="dispatcher">/recursos/empresa/principalEmpleador.jsp</result>
        </action>
        
        <action class="Actions.EliminarOfertaAction" name="eliminarOferta">
            <result type="dispatcher" name="input">/recursos/Ofertas/eliminarOferta.jsp</result>
        </action>
        
        <action class="Actions.EliminarOfertaAction" name="eliminarOfertaProcess" method="eliminar">
            <result type="dispatcher" name="input">/recursos/Ofertas/eliminarOferta.jsp</result>
            <result type="dispatcher" name="error">/recursos/Ofertas/eliminarOferta.jsp</result>
            <result name="success" type="dispatcher">/recursos/empresa/principalEmpleador.jsp</result>
        </action>
        
        <action class="Actions.VerOfertaAction" name="verOferta">
            <result type="dispatcher" name="input">/recursos/Ofertas/verOferta.jsp</result>
        </action>
        
        <action class="Actions.VerPerfilSolicitanteAction" name="verPerfilSolicitante"> 
            <result type="dispatcher" name="input">/recursos/usuarios/perfilSolicitante.jsp</result>
        </action>
        
        <action class="Actions.VerPerfilSolicitanteAction" name="verPerfilSolicitanteProcess" method="ver">
            <result type="dispatcher" name="input">/recursos/usuarios/perfilSolicitante.jsp</result>
            <result type="dispatcher" name="error">/recursos/usuarios/perfilSolicitante.jsp</result>
            <result name="success" type="redirect">/recursos/perfilSolicitante.jsp</result>
        </action>
        
        <action  class="Actions.BuscarOfertasSolicitanteAction" name="buscarOfertasSolicitante">
            <result name="input" type="dispatcher">/recursos/usuarios/buscarOfertasSolicitante.jsp</result>
            <result name="success" type="dispatcher">/recursos/usuarios/buscarOfertasSolicitante.jsp</result>
        </action>
        
        <action  class="Actions.BuscarOfertasSolicitanteAction" name="buscarOfertasSolicitanteProcess" method="buscar">
            <result name="buscarOfertasSolicitante" type="dispatcher">/recursos/usuarios/verOfertas.jsp</result>
        </action>
        
        <action class="Actions.VerOfertaSolicitanteAction" name="verOfertaSolicitante">
            <result type="dispatcher" name="input">/recursos/usuarios/verOfertaSolicitante.jsp</result>
        </action>
        
        <action name="insertarSolicitud" class="Actions.VerOfertaSolicitanteAction">
            <result name="input" type="dispatcher">/recursos/usuarios/verOfertaSolicitante.jsp</result>
        </action>
        
        <action name="insertarSolicitudProcess" method="solicitar" class="Actions.VerOfertaSolicitanteAction">
            <result name="input" type="dispatcher">/recursos/usuarios/verOfertaSolicitante.jsp</result>
            <result name="error" type="dispatcher">/recursos/usuarios/verOfertaSolicitante.jsp</result>
            <result name="success" type="dispatcher">/recursos/usuarios/principalSolicitante.jsp</result>
        </action>
        
        <action  class="Actions.BuscarSolicitudesSolicitanteAction" name="buscarSolicitudesSolicitante">
            <result name="input" type="dispatcher">/recursos/usuarios/mantenerOfertasSolicitante.jsp</result>
            <result name="success" type="dispatcher">/recursos/usuarios/mantenerOfertasSolicitante.jsp</result>
        </action>
        
        <action  class="Actions.BuscarSolicitudesSolicitanteAction" name="buscarSolicitudesSolicitantesProcess" method="buscar">
            <result name="buscarSolicitudesSolicitantes" type="dispatcher">/recursos/usuarios/mantenerOfertasSolicitante.jsp</result>
        </action>
        
        <action class="Actions.EliminarSolicitudAction" name="eliminarSolicitudSolicitante">
            <result type="dispatcher" name="input">/recursos/usuarios/mantenerOfertasSolicitante.jsp</result>
            <result type="dispatcher" name="error">/recursos/usuarios/mantenerOfertasSolicitante.jsp</result>
        </action>
        
        <action class="Actions.EliminarSolicitudAction" name="eliminarSolicitudSolicitanteProcess" method="eliminar">
            <result type="dispatcher" name="input">/recursos/usuarios/mantenerOfertasSolicitante.jsp</result>
            <result type="dispatcher" name="error">/recursos/usuarios/mantenerOfertasSolicitante.jsp</result>
            <result name="success" type="dispatcher">/recursos/usuarios/mantenerOfertasSolicitante.jsp</result>
        </action>
        
        <action name="iniciarSesionAdministradorInit" class="Actions.IniciarSesionAdministradorAction">
            <interceptor-ref name="defaultStack">
                <param name="validation.excludeMethods">execute</param>
            </interceptor-ref>
            <result name="input" type="dispatcher">/recursos/administrador/login.jsp</result>
        </action>
        
        <action name="iniciarSesionAdministrador" method="iniciarSesionAdministrador" class="Actions.IniciarSesionAdministradorAction">
            <result name="input" type="dispatcher">/recursos/administrador/login.jsp</result>
            <result name="error" type="dispatcher">/recursos/administrador/login.jsp</result>
            <result name="success" type="dispatcher">/recursos/administrador/principalAdministrador.jsp</result>
        </action>
        
        <action  class="Actions.BuscarOfertasAdministradorAction" name="buscarOfertasAdministrador">
            <result name="input" type="dispatcher">/recursos/administrador/buscarOfertasAdministrador.jsp</result>
            <result name="success" type="dispatcher">/recursos/administrador/buscarOfertasAdministrador.jsp</result>
        </action>
        
        <action  class="Actions.BuscarOfertasAdministradorAction" name="buscarOfertasAdministradorProcess" method="buscar">
            <result name="buscarOfertasAdministrador" type="dispatcher">/recursos/administrador/mantenerOfertasAdministrador.jsp</result>
        </action>
        
        <action class="Actions.EliminarOfertaAction" name="eliminarOfertaAdministrador">
            <result type="dispatcher" name="input">/recursos/administrador/eliminarOfertaAdministrador.jsp</result>
        </action>
        
        <action class="Actions.EliminarOfertaAction" name="eliminarOfertaAdministradorProcess" method="eliminar">
            <result type="dispatcher" name="input">/recursos/administrador/eliminarOfertaAdministrador.jsp</result>
            <result type="dispatcher" name="error">/recursos/administrador/eliminarOfertaAdministrador.jsp</result>
            <result name="success" type="dispatcher">/recursos/administrador/principalAdministrador.jsp</result>
        </action>
        
        <action  class="Actions.BuscarEmpleadoresAction" name="buscarEmpleadores">
            <result name="input" type="dispatcher">/recursos/administrador/buscarEmpleadores.jsp</result>
        </action>
        
        <action  class="Actions.BuscarEmpleadoresAction" name="buscarEmpleadoresProcess" method="buscar">
            <result name="buscarEmpleadores" type="dispatcher">/recursos/administrador/mantenerEmpleadores.jsp</result>
        </action>
        
        <action class="Actions.EliminarEmpleadorAction" name="eliminarEmpleador">
            <result type="dispatcher" name="input">/recursos/empresa/eliminarEmpleador.jsp</result>
        </action>
        
        <action class="Actions.EliminarEmpleadorAction" name="eliminarEmpleadorProcess" method="eliminar">
            <result type="dispatcher" name="input">/recursos/empresa/eliminarEmpleador.jsp</result>
            <result type="dispatcher" name="error">/recursos/empresa/eliminarEmpleador.jsp</result>
            <result name="success" type="redirect">/recursos/empresa/principalEmpleador.jsp</result>
        </action>
        
        <action class="Actions.EliminarEmpleadorAdministradorAction" name="eliminarEmpleadorAdministrador">
            <result type="dispatcher" name="input">/recursos/administrador/eliminarEmpleadorAdministrador.jsp</result>
        </action>
        
        <action class="Actions.EliminarEmpleadorAdministradorAction" name="eliminarEmpleadorAdministradorProcess" method="eliminar">
            <result type="dispatcher" name="input">/recursos/administrador/eliminarEmpleadorAdministrador.jsp</result>
            <result type="dispatcher" name="error">/recursos/administrador/eliminarEmpleadorAdministrador.jsp</result>
            <result name="success" type="redirect">/recursos/administrador/principalAdministrador.jsp</result>
        </action>
        
        <action class="Actions.VerPerfilAdministradorAction" name="verPerfilAdministrador"> 
            <result type="dispatcher" name="input">/recursos/administrador/perfilAdministrador.jsp</result>
        </action>
        
        <action class="Actions.VerPerfilAdministradorAction" name="verPerfilAdministradorProcess" method="ver">
            <result type="dispatcher" name="input">/recursos/administrador/perfilAdministrador.jsp</result>
            <result type="dispatcher" name="error">/recursos/administrador/perfilAdministrador.jsp</result>
            <result name="success" type="redirect">/recursos/administrador/perfilAdministrador.jsp</result>
        </action>
        
        <action class="Actions.EditarAdministradorAction" name="editarAdministrador">
            <interceptor-ref name="defaultStack">
                <param name="validation.excludeMethods">execute</param>
            </interceptor-ref>
            <result type="dispatcher" name="input">/recursos/administrador/editarAdministrador.jsp</result>
            <result type="dispatcher" name="error">/recursos/administrador/editarAdministrador.jsp</result>
        </action>
        
        <action class="Actions.EditarAdministradorAction" name="editarAdministradorProcess" method="editar">
            <result type="dispatcher" name="input">/recursos/administrador/editarAdministrador.jsp</result>
            <result type="dispatcher" name="error">/recursos/administrador/editarAdministrador.jsp</result>
            <result name="success" type="redirect">/recursos/administrador/principalAdministrador.jsp</result>
        </action> 
        
        <action class="Actions.EliminarAdministradorAction" name="eliminarAdministrador">
            <result type="dispatcher" name="input">/recursos/administrador/eliminarAdministrador.jsp</result>
            <result type="dispatcher" name="error">/recursos/administrador/eliminarAdministrador.jsp</result>
        </action>
        
        <action class="Actions.EliminarAdministradorAction" name="eliminarAdministradorProcess" method="eliminar">
            <result type="dispatcher" name="input">/recursos/administrador/eliminarAdministrador.jsp</result>
            <result type="dispatcher" name="error">/recursos/administrador/eliminarAdministrador.jsp</result>
            <result name="success" type="redirect">/recursos/administrador/principalAdministrador.jsp</result>
        </action>
        
        <action name="insertarAdministrador" class="Actions.InsertarAdministradorAction">
            <interceptor-ref name="defaultStack">
                <param name="validation.excludeMethods">execute</param>
            </interceptor-ref>
            <result name="input" type="dispatcher">/recursos/administrador/insertarAdministrador.jsp</result>
        </action>
        
        <action name="insertarAdministradorProcess" method="insertar" class="Actions.InsertarAdministradorAction">
            <result name="input" type="dispatcher">/recursos/administrador/insertarAdministrador.jsp</result>
            <result name="error" type="dispatcher">/recursos/administrador/insertarAdministrador.jsp</result>
            <result name="success" type="redirect">/recursos/administrador/principalAdministrador.jsp</result>
        </action>
    </package>
</struts>
