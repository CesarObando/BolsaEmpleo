<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="empresa" namespace="/recursos/empresa" extends="struts-default">
        
        <action name="iniciarSesionEmpleadorInit" class="Actions.IniciarSesionEmpleadorAction">
            <interceptor-ref name="defaultStack">
                <param name="validation.excludeMethods">execute</param>
            </interceptor-ref>
            <result name="input" type="dispatcher">/recursos/empresa/login.jsp</result>
        </action>
        
        <action name="iniciarSesionEmpleador" method="iniciarSesionEmpleador" class="Actions.IniciarSesionEmpleadorAction">
            <result name="input" type="dispatcher">/recursos/empresa/login.jsp</result>
            <result name="error" type="dispatcher">/recursos/empresa/login.jsp</result>
            <result name="success" type="dispatcher">/recursos/empresa/editarEmpleador.jsp</result>
        </action>
        
        <action class="Actions.EditarEmpleadorAction" name="editarEmpleador" method="prepare">
            <interceptor-ref name="prepare"> </interceptor-ref>
            <result type="dispatcher" name="input">/recursos/empresa/editarEmpleador.jsp</result>
        </action>
        
        <action class="Actions.EditarEmpleadorAction" name="editarEmpleadorProcess" method="editar">
            <interceptor-ref name="prepare"> </interceptor-ref>
            <result type="dispatcher" name="input">/recursos/empresa/editarEmpleador.jsp</result>
            <result type="dispatcher" name="error">/recursos/empresa/editarEmpleador.jsp</result>
            <result name="success" type="redirect">/recursos/empresa/principalEmpleador.jsp</result>
        </action>
        
        <action name="registrarEmpleador" class="Actions.InsertarEmpleadoresAction">
            <interceptor-ref name="defaultStack">
                <param name="validation.excludeMethods">execute</param>
            </interceptor-ref>
            <result name="input" type="dispatcher">/recursos/empresa/registrarEmpleador.jsp</result>
        </action>
        
        <action name="registrarEmpleadorProcess" method="insertar" class="Actions.InsertarEmpleadoresAction">
            <result name="input" type="dispatcher">/recursos/empresa/registrarEmpleador.jsp</result>
            <result name="error" type="dispatcher">/recursos/empresa/registrarEmpleador.jsp</result>
            <result name="success" type="redirect">/recursos/empresa/principalEmpleador.jsp</result>
        </action>
        
        <action class="Actions.EliminarEmpleadorAction" name="eliminarEmpleador">
            <result type="dispatcher" name="input">/recursos/empresa/eliminarEmpleador.jsp</result>
        </action>
        
        <action class="Actions.EliminarEmpleadorAction" name="eliminarEmpleadorProcess" method="eliminar">
            <result type="dispatcher" name="input">/recursos/empresa/eliminarEmpleador.jsp</result>
            <result type="dispatcher" name="error">/recursos/empresa/eliminarEmpleador.jsp</result>
            <result name="success" type="redirect">/recursos/empresa/principalEmpleador.jsp</result>
        </action>
        
        <action class="Actions.VerPerfilEmpleadorAction" name="verPerfilEmpleador"> 
            <result type="dispatcher" name="input">/recursos/empresa/perfilEmpleador.jsp</result>
        </action>
        
        <action class="Actions.VerPerfilEmpleadorAction" name="verPerfilEmpleadorProcess" method="ver">
            <result type="dispatcher" name="input">/recursos/empresa/perfilEmpleador.jsp</result>
            <result type="dispatcher" name="error">/recursos/empresa/perfilEmpleador.jsp</result>
            <result name="success" type="redirect">/recursos/perfilEmpleador.jsp</result>
        </action>
    </package>
</struts>